<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_like"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.nickp.foodieandroid.Like">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">
        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"

            android:padding="10dp"
            android:src="@drawable/spaghetti1"
            android:contentDescription="Profile Avatar"/>
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kohphangan"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:textColor="#FFFFFF"/>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:background="@color/colorOpacity"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/previewTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorGrey"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:src="@drawable/people"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7.5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="170dp"
                android:layout_marginTop="7.5dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/fullstar"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/fullstar"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/fullstar"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/halfstar"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/emptystar"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/heart"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="170dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="10dp"
            android:src="@drawable/spaghetti1"
            android:contentDescription="Profile Avatar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy Su"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:textColor="#FFFFFF"/>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:background="@color/colorOpacity"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorGrey"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:src="@drawable/people"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7.5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="170dp"
                android:layout_marginTop="7.5dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/fullstar"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/fullstar"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/halfstar"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/emptystar"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/emptystar"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/heart"/>
    </RelativeLayout>
</RelativeLayout>
